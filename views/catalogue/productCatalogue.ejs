<% layout('./layouts/boilerplate') %>
    <div class="d-flex flex-row w-100">
        <div class="d-none d-md-block d-flex flex-column mt-3 side-filters">
            <div class="product-filters bg-light mt-5 text-dark">
                <div class="d-flex justify-content-center align-items-center p-2 fs-1">ðŸš§</div>
                <div class="text-center p-1 fw-bold">
                    &nbsp;
                </div>
                <div class="filter-potions">
                    <ul class="list-group">
                        <li class="list-group-item"><%- products[0].brand ? "Brand" : "" ; %>
                                <ul>
                                    <% if(availableBrands) {availableBrands.forEach((brand)=>{%>
                                        <li>
                                            <%= brand %>
                                        </li>
                                        <% })}%>
                                </ul>
                        </li>
                        <li class="list-group-item"><%- products[0].channels ? "Channels" : "" ; %>
                                <ul>
                                    <% if(availableChannels){ availableChannels.forEach((channel)=> { %>
                                        <li>
                                            <%= channel %>
                                        </li>
                                        <% })} %>
                                </ul>
                        </li>
                        <li class="list-group-item"><%- products[0].power ? "Power" : "" ; %>
                                <ul>
                                    <% if(availablePower){ availablePower.forEach((power)=>{ %>
                                        <li>
                                            <%= power %>
                                        </li>
                                        <% })} %>
                                </ul>
                        </li>
                        <li class="list-group-item"><%- products[0].status ? "Status" : "" ; %>
                                <ul>
                                    <% if(stockAvailability){ stockAvailability.forEach((status)=> { %>
                                        <li>
                                            <%= status %>
                                        </li>
                                        <% })} %>
                                </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="mt-3 mb-3 h-100 d-flex flex-column w-100 catalogue-wrapper">
            <div class="d-flex flex-column justify-content-center align-items-center w-100">
                <div>
                    <h1>
                        <%= products[0].component %>
                    </h1>
                </div>
                <div class="d-flex row align-items-stretch justify-content-between w-100 product-wrapper">
                    <% for(let product of products) {%>
                        <div class="card rounded-5 p-1 product-container text-dark">
                            <%if(product.images[0]){%>
                                <img src="<%= product.images[0].split(',')[0] %>" alt="" class="card-img-top">
                                <%}%>
                                    <div class="card-body">
                                        <h2 class="card-title">
                                            <%= product.title %>
                                        </h2>
                                        <div class="catalogue-buttons d-flex justify-content-between">
                                            <a href="/products/show/<%= product.id%>"><button
                                                    class="btn btn-primary catalogue-btn">Show</button></a>
                                            <% if(currentUser){%>
                                                <a href="/products/update/<%= product.id %>">
                                                    <button class="btn btn-success catalogue-btn">Edit</button></a>
                                                <%}%>
                                        </div>
                                    </div>
                        </div>
                        <% } %>
                </div>
            </div>
        </div>
    </div>