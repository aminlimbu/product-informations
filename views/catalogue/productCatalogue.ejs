<% layout('./layouts/boilerplate') %>
    <div class="mt-3 mb-3 mx-2 h-100 d-flex flex-column">
        <h1>
            <%= products[0].component %>
        </h1>
        <div class="d-flex row align-items-stretch justify-content-between">
            <% for(let product of products) {%>
                <div class="col-md-4 col-sm-6 card rounded-5 p-3 mb-n5">
                <%if(product.images[0]){%>
                    <img src="<%= product.images[0].split(',')[0] %>" alt="" class="card-img-top">
                    <%}%>
                    <div class="card-body">
                        <h2 class="card-title">
                            <%= product.title %>
                        </h2>
                        <p class="card-text">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Vel beatae
                            consectetur
                            tempora dicta illo praesentium hic, nulla totam quas inventore veniam deleniti
                            exercitationem
                            magni
                            iure.</p>
                        <div class="catalogue-buttons mt-1 d-flex justify-content-around">
                            <a href="/products/show/<%= product.id%>"><button
                                    class="btn btn-primary cb-show">Show</button></a>
                            <% if(currentUser){%>
                                <a href="/products/update/<%= product.id %>">
                                    <button class="btn btn-success cd-edit">Edit</button></a>
                                <%}%>
                        </div>
                    </div>
                </div>
                <% } %>
        </div>
    </div>