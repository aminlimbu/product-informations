<% layout('./layouts/boilerplate') %>
    <div class="overflow-auto mt-3 p-3 mb-3 h-100">
        <h1>
            <%= products.component %>
        </h1>
        <div class="row align-items-center justify-content-center h-100">
            <% for(let product of products) {%>
                <div class="col-md-4 card rounded-3 m-5">
                    <img src="<%= product.images[0].split(',')[0] %>"
                        alt="" class="card-img-top">
                    <div class="card-body">
                        <h2 class="card-title">
                            <%= product.title %>
                        </h2>
                        <p class="card-text">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Vel beatae
                            consectetur
                            tempora dicta illo praesentium hic, nulla totam quas inventore veniam deleniti
                            exercitationem
                            magni
                            iure.</p>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item bg-transparent text-light">
                                SKU: <%= product.sku %>
                            </li>
                            <li class="list-group-item bg-transparent text-light">
                                Stock: <%= product.status %>
                            </li>
                            <li class="list-group-item bg-transparent text-light">
                                Output: <%= product.channels %>
                            </li>
                            <li class="list-group-item bg-transparent text-light">
                                Power: <%= product.power %>
                            </li>
                        </ul>
                    </div>
                    <div class="catalogue-buttons mb-3 d-flex justify-content-around">
                    <a href="/products/show/<%= product.id%>"><button class="btn btn-primary cb-show">Show</button></a>
                    <a href="/products/update/<%= product.id %>">
                    <button class="btn btn-success cd-edit">Edit</button></a>
                    </div>
                </div>
                <% } %>
        </div>
    </div>