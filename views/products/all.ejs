<% layout('./layouts/boilerplate')%>
    <div class="overflow-auto h-100">
        <h1>All Products</h1>
        <div>
            <table class="table text-light">
                <thead>
                    <th scope="col">Name</th>
                    <th scope="col">Brand</th>
                    <th scope="col">SKU</th>
                    <th scope="col">Description</th>
                    <th scope="col">Component</th>
                    <th scope="col">Status</th>
                    <th scope="col">Image</th>
                    <th scope="col">Action</th>
                </thead>
                <tbody>
                    <% for(let product of products){%>
                        <tr>
                            <td class="p-2">
                                <%= product.title%>
                            </td>
                            <td class="p-2">
                                <%= product.brand%>
                            </td>
                            <td class="p-2">
                                <%= product.sku%>
                            </td>
                            <td class="p-2">
                                <%= product.description %>
                            </td>
                            <td class="p-2">
                                <%= product.component%>
                            </td>
                            <td class="p-2">
                                <%= product.status%>
                            </td>
                            <td class="p-2">
                                <img src="https://assets.denon.com/Assets/images/ProductImages/PMA-A110/1658_DN_PMA-A-110_overview_image_900x595.png"
                                    class="img-thumbnail">
                            </td>
                            <td class="p-2">
                                <a href="/products/update/<%= product.id %>"><button
                                        class="btn btn-primary mb-2 w-100">Edit</button></a>
                                <a href="/products/show/<%= product.id %>"><button
                                        class="btn btn-success mb-2 w-100">Show</button></a>
                                <form action="/products/<%= product.id %>?_method=DELETE" method="POST"><button
                                        class="btn btn-danger mb-2 w-100">Delete</button></form>
                            </td>
                        </tr>
                        <%}%>
                </tbody>
            </table>
        </div>
    </div>